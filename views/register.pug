extends layout.pug 

block content
  h1 Register
  form(action='/register', method='POST')
    label(for='name') Name
    input(id='name' type='text', name='name', placeholder='Jhon Doe', autocomplete='name')

    label(for='email') Email 
    input(id='email', type='email', name='email', placeholder='example@email.com', autocomplete='email', required)
    
    label(for='current-password') Password 
    input(id='current-password', type='password', name='password', autocomplete='current-password', required)
    
    input(type='submit', value='register')
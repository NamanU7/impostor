extends layout.pug 

block content
  h1 Impostor
  p Welcome to Impostor
  form(action="/room", method="GET")
    label(for="name") Name:
    input(id="name", type="text", name="name", placeholder="name")
    input(type="submit", value="send")

  form(action="/logout", method="POST")
    button(class="logout", type="submit") Sign out

  form(action="/login", method="GET")
    button(class="login", type="submit") Sign in

  form(action="/local/register")
    button(class="register", type="submit") Register with Email
    